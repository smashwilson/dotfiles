#!/usr/bin/env bash

set -euo pipefail

if [ -z "${1:-}" ]; then
  printf "Usage: clone org/repo\n" >&2
  exit 1
fi

ORG=$(cut -d '/' -f 1 <<< "${1}")
REPO=$(cut -d '/' -f 2 <<< "${1}")

if [ -d "${ATOM_REPOS_HOME}/${ORG}/${REPO}" ]; then
  printf "${ATOM_REPOS_HOME}/${ORG}/${REPO} already exists.\n" >&2
  exit 1
fi

mkdir -p "${ATOM_REPOS_HOME}/${ORG}"
cd "${ATOM_REPOS_HOME}/${ORG}"

git clone git@github.com:${ORG}/${REPO}.git
