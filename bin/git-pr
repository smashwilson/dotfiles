#!/bin/bash
#
# Fetch pull requests against the current repository.

set -euo pipefail
IFS=$'\n\t'

PR=${1:-}
REMOTE=${2:-}

[ -z ${PR} ] && {
  echo "Pull request number is required!"
  exit 1
}

[ -z ${REMOTE} ] && {
  if git remote | grep -q upstream; then
    REMOTE="upstream"
  else
    REMOTE="origin"
  fi
}

git fetch ${REMOTE} "+refs/pull/${PR}/head:pr-${PR}"
